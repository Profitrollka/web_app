-- Table 'user'

DROP TABLE IF EXISTS `user`;

CREATE TABLE `user` (
  `id` INTEGER NOT NULL AUTO_INCREMENT,
  `nickname` VARCHAR(64) NOT NULL,
  `first_name` VARCHAR(64) NOT NULL,
  `last_name` VARCHAR(64) NOT NULL,
  `email` VARCHAR(24) NOT NULL,
  `role` INTEGER NOT NULL,
  `password` VARCHAR(240) NOT NULL,
  `created` DATETIME NOT NULL DEFAULT 'NULL',
  `updated` DATETIME NULL DEFAULT NULL,
  PRIMARY KEY (`id`)
);

-- Table 'post'

DROP TABLE IF EXISTS `post`;

CREATE TABLE `post` (
  `id` INTEGER NOT NULL AUTO_INCREMENT,
  `text` VARCHAR(16383) NOT NULL,
  `user_id` INTEGER NOT NULL,
  `slug` VARCHAR(140) NOT NULL,
  `title` VARCHAR(140) NULL DEFAULT NULL,
  `created` DATETIME NOT NULL,
  `updated` DATETIME NULL,
  `intro` VARCHAR(360) NOT NULL,
  `img_path` VARCHAR(140) NULL DEFAULT NULL,
  `img_name` VARCHAR(140) NULL DEFAULT NULL,
  PRIMARY KEY (`id`),
KEY ()
);

-- Table 'comment'

DROP TABLE IF EXISTS `comment`;

CREATE TABLE `comment` (
  `id` INTEGER NOT NULL AUTO_INCREMENT,
  `text` VARCHAR(100) NOT NULL,
  `post_id` INTEGER NOT NULL,
  `user_id` INTEGER NOT NULL,
  `comment_id` INTEGER NULL DEFAULT NULL,
  `created` DATETIME NOT NULL,
  `updated` DATETIME NULL DEFAULT NULL,
  PRIMARY KEY (`id`)
);

-- Table 'post_tags'

DROP TABLE IF EXISTS `post_tags`;

CREATE TABLE `post_tags` (
  `post_id` INTEGER NOT NULL,
  `tag_id` INTEGER NOT NULL,
  PRIMARY KEY (`post_id`)
);

-- Table 'tag'


DROP TABLE IF EXISTS `tag`;

CREATE TABLE `tag` (
  `id` INTEGER NOT NULL AUTO_INCREMENT,
  `name` VARCHAR(64) NOT NULL,
  `slug` VARCHAR(140) NOT NULL,
  `created` DATETIME NOT NULL,
  PRIMARY KEY (`id`)
);

-- Foreign Keys

ALTER TABLE `post` ADD FOREIGN KEY (user_id) REFERENCES `user` (`id`);
ALTER TABLE `comment` ADD FOREIGN KEY (post_id) REFERENCES `post` (`id`);
ALTER TABLE `comment` ADD FOREIGN KEY (user_id) REFERENCES `user` (`id`);
ALTER TABLE `post_tags` ADD FOREIGN KEY (post_id) REFERENCES `post` (`id`);
ALTER TABLE `post_tags` ADD FOREIGN KEY (tag_id) REFERENCES `tag` (`id`);

